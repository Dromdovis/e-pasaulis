# Database Configuration
# Replace these with your actual PocketBase URL and port
NEXT_PUBLIC_POCKETBASE_URL=http://127.0.0.1:8090

# PocketBase Admin Credentials
# Replace these with your actual admin credentials
POCKETBASE_ADMIN_EMAIL=your.email@example.com
POCKETBASE_ADMIN_PASSWORD=your_password

# Next.js Configuration
# Set this in production to your actual domain
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Default Language (optional, defaults to 'en')
NEXT_PUBLIC_DEFAULT_LOCALE=en

# Optional: Analytics (if you're using any analytics service)
# NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id

# Optional: API Keys (if you're using any external services)
# API_KEY=your_api_key
